{
  "platform": "node",
  "node": { "version": "18" },
  "app": "pharmacy-backend",
  "port": 3000,
  "build": {
    "commands": [
      "cd backend && npm install",
      "cd backend && npx prisma migrate deploy",
      "cd backend && npm run build"
    ]
  },
  "run": {
    "command": "cd backend && npm start"
  }
}
